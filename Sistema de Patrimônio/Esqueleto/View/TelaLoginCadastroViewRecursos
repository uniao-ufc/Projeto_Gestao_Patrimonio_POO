package Main;

import Controller.TelaLoginCadastroController;
import Model.TelaLoginCadastroModel;
import View.TelaLoginCadastroViewController;
import javafx.application.Application;
import javafx.fxml.FXMLLoader;
import javafx.scene.Parent;
import javafx.scene.Scene;
import javafx.stage.Stage;

public class Main extends Application {

    public void start(Stage primaryStage) throws Exception {
        TelaLoginCadastroModel model = new TelaLoginCadastroModel();
        TelaLoginCadastroController controller = new TelaLoginCadastroController(model);

        FXMLLoader loader = new FXMLLoader(getClass().getResource("/View/TelaLoginCadastro.fxml"));
        loader.setController(new TelaLoginCadastroViewController(controller));
        Parent root = loader.load();

        Scene scene = new Scene(root);
        primaryStage.setTitle("Sistema de Gest√£o de Bens");
        primaryStage.setScene(scene);
        primaryStage.show();
    }

    public static void main(String[] args) {
        launch(args);
    }
}
